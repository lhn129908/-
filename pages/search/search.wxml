    <van-tab title="用户" bindtap="clickYong">内容 5</van-tab>
    <van-tab title="MV" bindtap="clickMv">内容 6</van-tab>
    <van-tab title="歌词" bindtap="clickCi">内容 6</van-tab>
    <van-tab title="电台" bindtap="clickDian">内容 6</van-tab>
    <van-tab title="视频" bindtap="clickShi">内容 6</van-tab> -->
